{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.+)",
      "dest": "backend/server.js"
    },
    {
      "src": "/uploads/(.+)",
      "dest": "backend/server.js"
    },
    {
      "src": "/health",
      "dest": "backend/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/build/static/$1"
    },
    {
      "src": "/favicon\\.ico",
      "dest": "/frontend/build/favicon.ico"
    },
    {
      "src": "/manifest\\.json",
      "dest": "/frontend/build/manifest.json"
    },
    {
      "src": "/(.*)\\.(.+)",
      "dest": "/frontend/build/$1.$2"
    },
    {
      "src": "/dashboard",
      "status": 200,
      "dest": "/frontend/build/index.html"
    },
    {
      "src": "/files",
      "status": 200,
      "dest": "/frontend/build/index.html"
    },
    {
      "src": "/visualizations",
      "status": 200,
      "dest": "/frontend/build/index.html"
    },
    {
      "src": "/settings",
      "status": 200,
      "dest": "/frontend/build/index.html"
    },
    {
      "src": "/help",
      "status": 200,
      "dest": "/frontend/build/index.html"
    },
    {
      "src": "/about",
      "status": 200,
      "dest": "/frontend/build/index.html"
    },
    {
      "src": "/(.*)",
      "status": 200,
      "dest": "/frontend/build/index.html"
    }
  ]
} 